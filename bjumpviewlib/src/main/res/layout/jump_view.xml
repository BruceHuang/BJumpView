<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:focusable="false">

    <RelativeLayout
        android:id="@+id/board_gift_content_layer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/backGround_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/jv_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="50.0dip"
            android:layout_toLeftOf="@+id/board_gift_icon_fadein_iv"
            android:layout_toRightOf="@+id/board_gift_avatar_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_gift_nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="八喜临门"
                android:textColor="@android:color/white"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/board_gift_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/board_gift_nick_tv"
                android:layout_below="@id/board_gift_nick_tv"
                android:singleLine="true"
                android:text="送周笔畅"
                android:textColor="#fffeda60"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/board_gift_avatar_iv"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/round"
            android:scaleType="centerCrop"
             />

        <ImageView
            android:id="@+id/board_gift_icon_fadein_iv"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="-50.0dip"
            android:layout_toRightOf="@id/backGround_image"
            android:scaleType="fitXY"
            android:src="@drawable/rocket" />

        <LinearLayout
            android:id="@+id/board_gift_icon_layout_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/board_gift_icon_fadein_iv"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/board_gift_icon_fadein_iv"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gift_count_x_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/jv_x" />

            <LinearLayout
                android:id="@+id/hit_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>